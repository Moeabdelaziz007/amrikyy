# A2A API Gateway Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
HOST=0.0.0.0

# Security
JWT_SECRET=auraos-a2a-super-secret-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=a2a_events
RABBITMQ_QUEUE_PREFIX=a2a

# External Services
AUTOPILOT_SERVICE_URL=http://localhost:3002
TELEGRAM_BOT_URL=http://localhost:3003
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/a2a/webhook/telegram

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/gateway.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# WebSocket
WS_PORT=3004
WS_PATH=/ws/a2a

# Message Broker
MESSAGE_TTL=86400000
MAX_RETRIES=3
RETRY_DELAY=1000
BACKOFF_MULTIPLIER=2

# Dead Letter Queue
ENABLE_DLQ=true
DLQ_TTL=604800000

# Security Headers
ENABLE_SECURITY_HEADERS=true
TRUST_PROXY=true

# API Documentation
ENABLE_SWAGGER=true
SWAGGER_PATH=/api/docs
