# AuraOS Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================
APP_NAME=AuraOS
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/auraos
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# API KEYS & SECRETS
# =============================================================================
SECRET_KEY=your-super-secret-key-here-change-in-production
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
FIREBASE_SERVICE_ACCOUNT_KEY=path/to/firebase-service-account.json

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
PROMETHEUS_PORT=8000
GRAFANA_URL=http://localhost:3000
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=INFO

# =============================================================================
# SECURITY
# =============================================================================
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
CONVERSATIONAL_CORE_PORT=8001
FILE_ORGANIZER_PORT=8002
IDE_AGENT_PORT=8003

# =============================================================================
# DEVELOPMENT
# =============================================================================
RELOAD=true
WORKERS=1
HOST=0.0.0.0
PORT=8000

# =============================================================================
# PRODUCTION
# =============================================================================
# Set these for production deployment
# WORKERS=4
# RELOAD=false
# DEBUG=false
# ENVIRONMENT=production