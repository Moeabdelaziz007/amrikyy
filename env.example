# AuraOS Automation Platform - Environment Configuration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_PASSWORD=auraos123
DATABASE_URL=postgresql://postgres:auraos123@localhost:5432/auraos_automation

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@localhost:6379

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3001
CLIENT_URL=http://localhost:3000

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_RATE_LIMIT=1000
API_RATE_WINDOW=900000
MAX_FILE_SIZE=10485760

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AI Services (Optional)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================================================
# AUTOPILOT LLM INTEGRATION
# =============================================================================
AUTOPILOT_LLM_ENABLED=true
AUTOPILOT_LLM_PROVIDER=gemini
AUTOPILOT_LLM_MAX_TOKENS=4000
AUTOPILOT_LLM_TIMEOUT=30000
AUTOPILOT_LLM_RETRIES=3

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================
LLM_PROVIDER=gemini
LLM_API_KEY=your_llm_api_key_here
LLM_MODEL=gemini-pro
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_BASE_URL=

# Google AI Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Groq Configuration (if using Groq)
GROQ_API_KEY=your_groq_api_key_here

# Ollama Configuration (if using local Ollama)
OLLAMA_BASE_URL=http://localhost:11434

# Cursor API Configuration (if using Cursor API)
CURSOR_API_KEY=your_cursor_api_key_here

# =============================================================================
# TELEGRAM INTEGRATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id_here

# =============================================================================
# WEBHOOK & INTEGRATIONS
# =============================================================================
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000

# =============================================================================
# SECURITY & CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
HELMET_CSP=true
RATE_LIMIT_ENABLED=true

# =============================================================================
# MONITORING PASSWORDS
# =============================================================================
GRAFANA_PASSWORD=admin123

# =============================================================================
# SSL/TLS (For Production)
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=auraos-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key