{
  "name": "auraos-a2a-system",
  "version": "1.0.0",
  "description": "A2A Integration System for AuraOS - نظام تكامل شامل للتطبيقات",
  "main": "index.js",
  "scripts": {
    "start": "./start-a2a-system.sh",
    "dev": "docker-compose -f docker-compose.dev.yml up -d",
    "stop": "docker-compose -f docker-compose.dev.yml down",
    "clean": "docker-compose -f docker-compose.dev.yml down -v",
    "logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "test": "npm run test:gateway && npm run test:integration",
    "test:gateway": "cd gateway && npm test",
    "test:integration": "cd tests && npm test",
    "test:watch": "cd gateway && npm run test:watch",
    "build": "cd gateway && npm run build",
    "lint": "cd gateway && npm run lint",
    "lint:fix": "cd gateway && npm run lint:fix",
    "docs": "cd docs && npm run serve",
    "health": "curl -f http://localhost:3001/api/health || echo 'Service not ready'",
    "status": "docker-compose -f docker-compose.dev.yml ps",
    "restart": "npm run stop && npm run dev",
    "update": "docker-compose -f docker-compose.dev.yml pull && docker-compose -f docker-compose.dev.yml up -d --build"
  },
  "keywords": [
    "a2a",
    "api-gateway",
    "integration",
    "microservices",
    "telegram",
    "autopilot",
    "message-broker",
    "auraos"
  ],
  "author": "AuraOS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/auraos/a2a-system.git"
  },
  "bugs": {
    "url": "https://github.com/auraos/a2a-system/issues"
  },
  "homepage": "https://auraos.com",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "workspaces": [
    "gateway",
    "autopilot",
    "telegram_bot",
    "sdk/node",
    "sdk/python",
    "tests"
  ]
}